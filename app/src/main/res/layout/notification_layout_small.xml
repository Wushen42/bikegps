<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="64dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp">

        <TextView
            android:layout_weight="48"
            android:id="@+id/notification_title"
            style="@style/TextAppearance.Compat.Notification.Title"

            android:layout_height="match_parent"

            android:text="@string/notification_title"
            android:layout_width="0dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            tools:src="@android:drawable/ic_notification_clear_all" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/notification_speed"
            android:text="@string/notification_speed"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:layout_weight="2"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/notification_distance"
            android:text="@string/notification_distance"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/notification_time"
            android:layout_height="match_parent"
            android:text="@string/notification_time"
            app:autoSizeTextType="uniform"
            android:layout_width="0dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/notification_altitude"
            android:text="@string/notification_altitude"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:layout_weight="2"
            android:layout_width="0dp" />

    </LinearLayout>
</LinearLayout>



